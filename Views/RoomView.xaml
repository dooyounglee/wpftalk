<Window x:Class="talk2.Views.RoomView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:talk2.Views"
        mc:Ignorable="d"
        Title="RoomView" Height="450" Width="300">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Templates/ChatsTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" Text="{Binding Title}" Visibility="{Binding TitleEditMode}" BorderThickness="0" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBlock Grid.Column="0" Text="{Binding Title}" Visibility="{Binding TitleReadMode}" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" ToolTip="{Binding Title}"/>
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Stretch">
                <Button Content="✎" Width="20" Visibility="{Binding TitleReadMode}" Command="{Binding EditTitleCommand}" Height="40"/>
                <Button Content="✔" Width="20" Visibility="{Binding TitleEditMode}" Command="{Binding SaveTitleCommand}"/>
                <Button Content="✘" Width="20" Visibility="{Binding TitleEditMode}" Command="{Binding CancleTitleCommand}"/>
            </StackPanel>             
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="👤➕" Command="{Binding InviteCommand}"/>
            <Button Grid.Column="1" Content="👥" Command="{Binding RoomUserCommand}"/>
            <Button Grid.Column="2" Content="📴" Command="{Binding LeaveCommand}" AutomationProperties.AutomationId="BtnLeave"/>
            <Button Grid.Column="3" Content="📜" Command="{Binding AllChatCommand}"/>

        </Grid>
        <Grid Grid.Row="2">
            <ScrollViewer x:Name="scroll">
                <ItemsControl ItemsSource="{Binding Chats}" ItemTemplateSelector="{StaticResource MessageTemplateSelector}" AutomationProperties.AutomationId="chats"/>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" KeyDown="TextBox_KeyDown" TextWrapping="Wrap" AutomationProperties.AutomationId="txt"
             Text="{Binding Msg, UpdateSourceTrigger=PropertyChanged}"
             AllowDrop="True" PreviewDragOver="TextBox_PreviewDragOver" Drop="TextBox_Drop" />
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <CheckBox Grid.Row="0" Content="DB" IsChecked="{Binding IsSave}"/>
                <Button Grid.Row="1" Content="전송" Click="Button_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
