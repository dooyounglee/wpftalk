<Window x:Class="talk2.Views.RoomUserPopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:talk2.Views"
        mc:Ignorable="d"
        Title="RoomUserPopupView" Height="450" Width="300">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Templates/UsersTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <ScrollViewer x:Name="scroll">
            <ItemsControl ItemsSource="{Binding UserList}" ItemTemplate="{StaticResource RoomUsersTemplate}" />
        </ScrollViewer>
    </Grid>
</Window>
