<UserControl x:Class="talk2.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:talk2.Views"
        xmlns:viewmodels="clr-namespace:talk2.ViewModels"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="300"
        Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <local:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="32" Margin="37,42,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="173"/>
        <Button Content="Login" HorizontalAlignment="Left" Height="65" Margin="37,300,0,0" VerticalAlignment="Top" Width="113" Command="{Binding LoginCommand}"/>

        <!-- ID -->
        <Grid Margin="80,103,0,0" Width="175" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="Id" Text="{Binding Id}" GotKeyboardFocus="Id_GotKeyboardFocus"/>
            <TextBlock Text="Enter ID"
                      Foreground="Gray"
                      Margin="5,2,0,0"
                      IsHitTestVisible="False"
                      Visibility="{Binding Text, ElementName=Id, Converter={StaticResource EmptyToVisibilityConverter}}"/>
        </Grid>

        <!-- Password -->
        <Grid Margin="80,134,0,0" Width="175" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="Pw" Text="{Binding Pw}" GotKeyboardFocus="Pw_GotKeyboardFocus"/>
            <TextBlock Text="Enter Password"
                      Foreground="Gray"
                      Margin="5,2,0,0"
                      IsHitTestVisible="False"
                      Visibility="{Binding Text, ElementName=Pw, Converter={StaticResource EmptyToVisibilityConverter}}"/>
        </Grid>

        <!-- IP -->
        <Grid Margin="80,165,0,0" Width="175" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="IpBox" Text="{Binding Ip}"/>
            <TextBlock Text="Enter IP"
                      Foreground="Gray"
                      Margin="5,2,0,0"
                      IsHitTestVisible="False"
                      Visibility="{Binding Text, ElementName=IpBox, Converter={StaticResource EmptyToVisibilityConverter}}"/>
        </Grid>

        <!-- Port -->
        <Grid Margin="80,200,0,0" Width="175" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="PortBox" Text="{Binding Port}"/>
            <TextBlock Text="Enter Port"
                      Foreground="Gray"
                      Margin="5,2,0,0"
                      IsHitTestVisible="False"
                      Visibility="{Binding Text, ElementName=PortBox, Converter={StaticResource EmptyToVisibilityConverter}}"/>
        </Grid>

        <CheckBox Content="ID저장" IsChecked="{Binding IsCheckedSaveId}" Height="20" Width="200" Margin="0,80,0,10" />
        <CheckBox Content="자동로그인" IsChecked="{Binding IsCheckedAutoLogin}" IsEnabled="{Binding IsEnabledAutoLogin}" Height="20" Width="200" Margin="0,120,0,10"/>
        
    </Grid>
</UserControl>
