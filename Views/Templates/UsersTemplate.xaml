<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="ItemTemplate">
        <Border Background="Transparent">
            <Border.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding DataContext.UserInfoCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding UsrNo}"/>
                <MouseBinding Gesture="RightClick" Command="{Binding DataContext.UserContextmenuCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
            </Border.InputBindings>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <Trigger Property ="IsMouseOver" Value="True">
                                <Setter Property= "Background" Value="LightGray"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <!-- 프로필 이미지 -->
                <Border Width="40" Height="40"
                    CornerRadius="20"
                    Background="White"
                    ClipToBounds="True"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <!--<Border.Clip>
                        <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                    </Border.Clip>-->
                    <Image Width="50" Height="40"
                        Source="/Images/cat-5183427_640.jpg"
                        Stretch="UniformToFill"
                        Grid.Column="0"/>
                </Border>

                <!-- 이름 -->
                <StackPanel Grid.Column="1" Margin="5,0" Background="Transparent">
                    <TextBlock Text="{Binding UsrNm}" FontWeight="Bold"/>
                </StackPanel>

                <!-- 상태 -->
                <StackPanel Grid.Column="2"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Margin="5,0" Background="Transparent">
                    <TextBlock Text="{Binding ConnState}"
                  FontSize="12"
                  Foreground="Gray"
                  HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!--<TextBlock Text="{Binding Layout}">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property= "Foreground" Value="Black"/>
                    <Style.Triggers>
                        <Trigger Property ="IsMouseOver" Value="True">
                            <Setter Property= "Background" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
            <TextBlock.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding DataContext.UserInfoCommand, Source={x:Reference root}}" CommandParameter="{Binding UsrNo}"/>
                <MouseBinding Gesture="RightClick" Command="{Binding DataContext.UserContextmenuCommand, Source={x:Reference root}}"/>
            </TextBlock.InputBindings>
        </TextBlock>-->
    </DataTemplate>
</ResourceDictionary>